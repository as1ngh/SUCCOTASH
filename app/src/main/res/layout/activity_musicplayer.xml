<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".musicplayer">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/image_layout">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/headphones" />

    </RelativeLayout>

    <TextView
        android:id="@+id/musicname_id"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_layout"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:text="Music Name"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicname_id"
        android:layout_marginLeft="25dp"
        android:text="Artist Name" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_media_play" />

    <Button
        android:id="@+id/button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/floatingActionButton"
        android:layout_toLeftOf="@+id/floatingActionButton"
        android:layout_marginRight="70dp"
        android:background="@drawable/previous"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/floatingActionButton"
        android:background="@drawable/next"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="5dp"
        />


</RelativeLayout>